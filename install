# install chrome
wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | sudo apt-key add -
echo 'deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main' | sudo tee /etc/apt/sources.list.d/google-chrome.list
sudo apt-get update
sudo apt-get install google-chrome-stable

# install anaconda 3.x
google-chrome https://www.anaconda.com/download/#linux
cd ~/Downloads
chmod +x
./

# aws cli
pip install --upgrade --user awscli

# Sublime text
sudo add-apt-repository ppa:webupd8team/sublime-text-2
sudo apt-get update
# Optional: remove any installed Sublime Text packages:
sudo apt-get --purge remove sublime-text*
# Now to install Sublime Text, type the following:
sudo apt-get install sublime-text

# Qt
sudo apt install g++
sudo apt-get install libgl1-mesa-dev libglu1-mesa-dev

# OpenCV
sudo apt-get install build-essential
sudo apt-get install cmake git libgtk2.0-dev pkg-config libavcodec-dev libavformat-dev libswscale-dev
sudo apt-get install python-dev python-numpy libtbb2 libtbb-dev libjpeg-dev libpng-dev libtiff-dev libjasper-dev libdc1394-22-dev
cd ~/Downloads
git clone https://github.com/opencv/opencv.git
cd opencv
git checkout tags/2.4.13.2
mkdir release
cd release
cmake -D CMAKE_BUILD_TYPE=RELEASE ..
make -j4
sudo make install

# Tensorflow
conda install tensorflow-gpu
conda install keras-gpu
conda create --name py2 python=2.7 anaconda

# Mouse
sudo apt-get install xbindkeys xautomation x11-utils
xev | grep button
xbindkeys --defaults > ~/.xbindkeysrc
subl .xbindkeysrc

# Synergy
./synergy.sh server <peer-hostname> <peer-ip>
# Run synergy app

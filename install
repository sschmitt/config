# Mouse
sudo apt-get install xbindkeys xautomation x11-utils
xev | grep button
xbindkeys --defaults > ~/.xbindkeysrc
subl .xbindkeysrc ~/.xbindkeysrc

# Files
cp -a bin ~/bin
cp .gitconfig ~
cp .bash_aliases ~

# Linux Mint Icing Applet
# Applets - "Icing Task Manager"

# install chrome
wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | sudo apt-key add -
echo 'deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main' | sudo tee /etc/apt/sources.list.d/google-chrome.list
sudo apt-get update
sudo apt-get install google-chrome-stable

# install anaconda 3.x
google-chrome https://www.anaconda.com/download/#linux
cd ~/Downloads
bash Anaconda
conda create --name py2 python=2.7 anaconda

# aws cli
conda install -c conda-forge awscli
aws configure

# Sublime text
sudo add-apt-repository ppa:webupd8team/sublime-text-2
sudo apt-get update
# Optional: remove any installed Sublime Text packages:
sudo apt-get --purge remove sublime-text*
# Now to install Sublime Text, type the following:
sudo apt-get install sublime-text

# Sublime text preferences
# Ctrl+`
import urllib.request,os,hashlib; h = '4b86378e0afcd2ad5ac007f369be4059' + '5ce94c1559eaae2b4f88ac6125716bac'; pf = 'Preferences.sublime-settings'; pp = sublime.packages_path(); urllib.request.install_opener(urllib.request.build_opener(urllib.request.ProxyHandler())); by = urllib.request.urlopen('https://raw.githubusercontent.com/sschmitt/config/master/' + pf).read(); dh = hashlib.sha256(by).hexdigest(); print('Error validating download (got %s instead of %s), please try manual install' % (dh, h)) if dh != h else open(os.path.join(pp, 'User', pf), 'wb' ).write(by)

# jq
sudo apt install jq

# Qt
sudo apt install g++
sudo apt-get install libgl1-mesa-dev libglu1-mesa-dev
google-chrome https://www.qt.io/download

# OpenSSL 1.0.2g
sudo add-apt-repository "deb http://security.ubuntu.com/ubuntu xenial-security main"
sudo apt-get update
sudo apt-get install libssl1.0.0=1.0.2g-1ubuntu4.13
sudo apt-get install libssl-dev=1.0.2g-1ubuntu4.13
sudo apt-get install openssl=1.0.2g-1ubuntu4.13

# OpenCV
google-chrome https://docs.opencv.org/3.4/d7/d9f/tutorial_linux_install.html

# Tensorflow
conda install tensorflow-gpu
conda install keras-gpu

# Pulse audio GUI
sudo apt-get install pavucontrol

